{
  "id": "edible-css",
  "viewports": [
    {
      "label": "mobile",
      "width": 375,
      "height": 667
    },
    {
      "label": "tablet",
      "width": 768,
      "height": 1024
    },
    {
      "label": "desktop",
      "width": 1920,
      "height": 1080
    }
  ],
  "scenarios": [
    {
      "label": "Typography Elements",
      "url": "./test/samples/typography.html",
      "onBeforeScript": "puppeteer/onBefore.js"
    },
    {
      "label": "Form Elements",
      "url": "./test/samples/forms.html",
      "onBeforeScript": "puppeteer/onBefore.js"
    },
    {
      "label": "Table Elements",
      "url": "./test/samples/tables.html",
      "onBeforeScript": "puppeteer/onBefore.js"
    },
    {
      "label": "List Elements",
      "url": "./test/samples/lists.html",
      "onBeforeScript": "puppeteer/onBefore.js"
    },
    {
      "label": "Semantic Elements",
      "url": "./test/samples/semantic.html",
      "onBeforeScript": "puppeteer/onBefore.js"
    },
    {
      "label": "Code Elements",
      "url": "./test/samples/code.html",
      "onBeforeScript": "puppeteer/onBefore.js"
    },
    {
      "label": "Media Elements",
      "url": "./test/samples/media.html",
      "onBeforeScript": "puppeteer/onBefore.js"
    },
    {
      "label": "Interactive Elements",
      "url": "./test/samples/interactive.html",
      "onBeforeScript": "puppeteer/onBefore.js"
    },
    {
      "label": "Kitchen Sink",
      "url": "./test/samples/kitchen-sink.html",
      "onBeforeScript": "puppeteer/onBefore.js"
    }
  ],
  "paths": {
    "bitmaps_reference": "test/backstop/reference",
    "bitmaps_test": "test/backstop/test",
    "engine_scripts": "test/backstop/engine_scripts",
    "html_report": "test/backstop/html_report",
    "ci_report": "test/backstop/ci_report"
  },
  "report": ["browser"],
  "engine": "puppeteer",
  "engineOptions": {
    "args": [
      "--no-sandbox",
      "--disable-setuid-sandbox",
      "--disable-dev-shm-usage",
      "--disable-web-security",
      "--font-render-hinting=none",
      "--force-color-profile=srgb"
    ]
  },
  "asyncCaptureLimit": 5,
  "asyncCompareLimit": 50,
  "debug": false,
  "debugWindow": false,
  "resembleOutputOptions": {
    "ignoreAntialiasing": true,
    "errorType": "flatDifferenceIntensity"
  },
  "misMatchThreshold": 0.1
}
