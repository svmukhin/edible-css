{
  "name": "@svmukhin/edible-css",
  "version": "1.0.0",
  "description": "A primitive, classless CSS framework for developers with no design skills. Style semantic HTML5 with a single <link> tag.",
  "main": "dist/edible.css",
  "style": "dist/edible.css",
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist/edible.css",
    "dist/edible.min.css"
  ],
  "scripts": {
    "build": "postcss src/edible.css -o dist/edible.css",
    "minify": "postcss dist/edible.css -o dist/edible.min.css --no-map --use cssnano",
    "validate": "echo 'CSS validation skipped - using manual W3C validator'",
    "test:visual": "backstop test --config=test/backstop/backstop.json",
    "test:visual:reference": "backstop reference --config=test/backstop/backstop.json",
    "test:a11y": "pa11y-ci test/samples/*.html",
    "serve:tests": "python3 -m http.server 8080",
    "test": "npm run validate && npm run test:visual && npm run test:a11y",
    "lint:md": "markdownlint-cli2 \"**/*.md\"",
    "lint:license": "reuse lint"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/svmukhin/edible-css"
  },
  "keywords": [
    "css",
    "classless",
    "framework",
    "semantic-html",
    "no-classes",
    "drop-in"
  ],
  "author": "Sergei Mukhin",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/svmukhin/edible-css/issues"
  },
  "homepage": "https://github.com/svmukhin/edible-css#readme",
  "devDependencies": {
    "autoprefixer": "^10.4.20",
    "axe-core": "^4.10.2",
    "backstopjs": "^6.3.25",
    "cssnano": "^7.1.2",
    "markdownlint-cli2": "^0.20.0",
    "pa11y": "^8.0.0",
    "pa11y-ci": "^4.0.1",
    "postcss": "^8.4.49",
    "postcss-cli": "^11.0.0",
    "postcss-import": "^16.1.0",
    "w3c-css-validator": "^1.3.0"
  }
}
